%html
  %head
    = partial :htmlheader, :locals => { :nickname => nickname }
  %body
    %a{:href => '/'} Back
    %form{:action => '/buyxrp', :method => :post}
      %input{:type => :radio, :name => :coinid, :value => :none, :checked => :checked} -
      %br
      - coinids.each do |key|
        - coin = coins[key.to_s]
        - coinname = key.to_s[0, 1].upcase + key.to_s[1..-1]
        - sym = coin['symbol']
        - price = coin['price'] / 5.0 # 0.2 XRP
        %input{:type => :radio, :id => key, :name => :coinid, :value => key}
        %label{:for => key} Buy 0.2 XRP with #{price} #{sym}
        %br
      %input{:type => :submit}
